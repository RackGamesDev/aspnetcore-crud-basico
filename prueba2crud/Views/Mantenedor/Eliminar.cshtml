@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        editar contacto
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="POST">
            <input asp-for="IdContacto" type="hidden" class="form-control"><!--atributo escondido que hace referencia al IdContacto (que no se puede escribir) para que no salga null-->
            <div clas="alert alert-danger" role="alert">
                cuidado, se borrara el contacto @Html.DisplayTextFor(m => m.Nombre) ?<!--dibujar un texto, que en este caso es una propiedad del ContactoModel que se le ha pasado en el view()-->
            </div>
            <button type="submit" class="btn btn-danger">eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">volver a la lista</a><!--un enlace que ejecuta una accion (en este caso lleva a listar())-->
        </form>
    </div>
</div>